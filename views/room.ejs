<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meetings GetKloza</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="style.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>

    <script>
        const ROOM_ID = "<%= roomId %>";
    </script>
 <style>
   #video-grid{
         justify-content: center;
         padding-top: 5px;
      }
      video{
         object-fit: cover;

      }
 </style>
</head>
<body>
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-9 col-sm-12" id="left">
         
            <div class="row" id="video-grid">
         
            </div>
            
            <div class="row" id="main__controls">
               <div onclick="muteUnmute()" class="col" id="main__mute_button">
                  <i class="fas fa-microphone"></i> <br>
                  <span>Mute</span>
               </div>
               <div onclick="playStop()" class="col" id="main__video_button" >
                  <i class="fas fa-video"></i> <br>
                  <span>Stop Video</span>
               </div>
               <div class="col" id="control__button"> 
                  <a class="one" href="#" title="Meeting ID" data-toggle="popover" data-placement="top" 
                     data-content="<%= roomId %>"> <i class="fas fa-external-link-alt"></i> <br> 
                     <span>Meeting ID</span> 
                  </a>
               </div>
               <div class="col" id="control__button">
                  <i class="fas fa-user-friends"></i> <br>
                  <span>Participants</span>
               </div>
               <div class="col" id="control__button">
                  <i class="fas fa-share-square"></i> <br>
                  <span>Share Screen</span>
               </div>
               <div onclick="goBack()" class="col" id="leave_control__button">
                  <i class="fas fa-sign-out-alt"></i> <br>
                  <span>Leave</span>
               </div>
               
            </div>
         </div>

         <div class="col-md-3 col-sm-12" id="right">
            <div class="main__header">
               <h6>Chat <i class="fas fa-comment-alt"></i> </h6>
            </div>
            <div class="main__chat_window">
               <ul class="messages">
                  
               </ul>
   
            </div>
            <div class="main__message_container">
               <input id="chat_message" type="text" placeholder="Type message here...">
            </div>
         </div>
      </div>
   </div>

 
   <script src="script.js"></script>
</body>
</html>