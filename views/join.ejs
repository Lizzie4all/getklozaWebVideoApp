<body>
	<%- include ("./includes/nav") %>

	<div class="container" style="margin-top:30px">
		<div>
			<h1><span class="badge badge-secondary">getKloza <i class="fas fa-video"></i></span></h1>
		</div>
		<br>
		<div style="padding-top: 80px;">

			<div class="panel panel-default" style="padding:8px; background-color: rgb(222, 240, 240);">
				<div class="panel-heading" style="padding:20px"></div>
				<div class="panel-body">
					<div>
						<p>Join a Meeting</p>
					</div>
					<div class="form-group">
						<form Action="/join/meet" method="POST" >
							<input type="text" name="meetingId" placeholder="Enter Meeting ID" required="" class="form-control"><br/>
							<input type="submit" value="Join" class="btn btn-success"> 
						</form> <br/>
						<button onclick="goBack()" style="color: black; background: transparent">
							<i class="fas fa-chevron-circle-left"></i> <b>Back</b> 
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	

	<script src="script.js"></script>
